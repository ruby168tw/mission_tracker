<h1>任務列表</h1>

<%= link_to "新增任務", new_mission_path %>

<table>
  <thead>
    <tr>
      <td>任務標題</td>
      <td>任務內容</td>
      <td>開始時間</td>
      <td>結束時間</td>
      <td>任務狀態</td>
      <td>優先順序</td>
    </tr>
  </thead>
  <tbody>
    <% @missions.each do |mission| %>
    <tr>
      <td><%= mission.title %></td>
      <td><%= mission.content %></td>
      <td><%= mission.start_at %></td>
      <td><%= mission.end_at %></td>
      <td><%= mission.status %></td>
      <td><%= mission.piority %></td>
    </tr>
    <% end %>
  </tbody>
</table>