<h1>任務列表</h1>

<% if session[:user_id] %>
<%= link_to "登出", logout_path, method: :delete %>
<% else %>
<%= link_to "註冊", new_user_path %>
<%= link_to "登入", login_path %>
<% end %>
<%= link_to "新增任務", new_mission_path %>

<table>
  <thead>
    <tr>
      <td>任務標題</td>
      <td>任務內容</td>
      <td>開始時間</td>
      <td>結束時間</td>
      <td>任務狀態</td>
      <td>優先順序</td>
    </tr>
  </thead>
  <tbody>
    <% if @missions %>
      <% @missions.each do |mission| %>
      <tr>
        <td><%= mission.title %></td>
        <td><%= mission.content %></td>
        <td><%= mission.start_at.strftime("%Y-%m-%d") %></td>
        <td><%= mission.end_at.strftime("%Y-%m-%d") %></td>
        <td><%= mission.status %></td>
        <td><%= mission.piority %></td>
        <td>
        <%= link_to "編輯", edit_mission_path(mission) %>
        <%= link_to "刪除", mission_path(mission), method: "delete", data: { confirm: "確認刪除" } %>
      </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>