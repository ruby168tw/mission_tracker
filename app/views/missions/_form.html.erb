<%= form_for(@mission) do |f| %>
    <%= f.label :title, "任務標題" %>
    <%= f.text_field :title %> <br />

    <%= f.label :content, "任務內容" %>
    <%= f.text_area :content %> <br />

    <%= f.label :start_at, "開始時間" %>
    <%= f.text_field :start_at %> <br />

    <%= f.label :end_at, "結束時間" %>
    <%= f.text_field :end_at %> <br />

    <%= f.label :status, "任務狀態" %>
    <%= f.select :status, :collection => ["待處理", "進行中", "已完成"] %> <br />

    <%= f.label :piority, "優先順序" %>
    <%= f.select :piority, :collection => ["高", "中", "低"] %> <br />

    <%= f.submit "送出"%>
<% end %>