<%= form_for(@mission) do |f| %>
    <%= f.label :title, "任務標題" %>
    <%= f.text_field :title %> <br />

    <%= f.label :content, "任務內容" %>
    <%= f.text_field :content %> <br />

    <%= f.label :start_at, "開始時間" %>
    <%= f.text_field :start_at %> <br />

    <%= f.label :end_at, "結束時間" %>
    <%= f.text_area :end_at %> <br />

    <%= f.label :status, "任務狀態" %>
    <%= f.text_area :status %> <br />

    <%= f.label :piority, "優先順序" %>
    <%= f.text_area :piority %> <br />

    <%= f.submit "新增"%>
<% end %>